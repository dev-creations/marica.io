{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build-storybook": "cd apps/docs && npm run build-storybook",
    "chromatic": "cd apps/docs && npm run chromatic",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=apps^... && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "turbo": "latest"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/ui/*"
  ]
}
